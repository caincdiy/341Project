<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverCustomerOrder">


    <TextView
        android:id="@+id/titleView"
        android:layout_width="369dp"
        android:layout_height="75dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Order 1"
        android:textSize="36dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custPN"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="80dp"
        android:text="Customer Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/custAdr"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Customer Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custPN" />

    <TextView
        android:id="@+id/restPN"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Restaurant Phone Number : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custAdr" />

    <TextView
        android:id="@+id/restAdr"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Restaurant Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restPN" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="200dp"
        android:text="Back"
        android:onClick="goBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="200dp"
        android:onClick="acceptClick"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/customerPhoneNumberOutput"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/custPN"
        app:layout_constraintTop_toTopOf="@+id/custPN" />

    <TextView
        android:id="@+id/restaurantPhoneNumberOutput"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/restPN"
        app:layout_constraintTop_toTopOf="@+id/restPN" />

    <Button
        android:id="@+id/customerAddressInput"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:text="Navigation"
        android:onClick="navClickCust"
        app:layout_constraintBottom_toTopOf="@+id/restaurantPhoneNumberOutput"
        app:layout_constraintStart_toEndOf="@+id/custAdr"
        app:layout_constraintTop_toBottomOf="@+id/customerPhoneNumberOutput" />

    <Button
        android:id="@+id/restaurantAddressInput"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:text="Navigation"
        android:onClick="navClickRest"
        app:layout_constraintStart_toEndOf="@+id/restAdr"
        app:layout_constraintTop_toBottomOf="@+id/restaurantPhoneNumberOutput" />


</androidx.constraintlayout.widget.ConstraintLayout>